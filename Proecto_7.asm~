	__CONFIG 3F56

;_______________PROGRAMA 3 SECUENCIAS______________

;DECLARACION DE REGISTRO

PORTB EQU 0X06												;HABILITA EL PORTB
STATUS EQU 0X03												;HABILITA EL CAMBO DE BANCO
TRISB EQU 0X86													;HABILITA LA VONFIGURACION I/O

#DEFINE RP0 STATUS,5											;DEFINIMOS QUE RP0 ES IGUAL A STATUS,5 

;ORIGEN DEL PROGRAMA

	ORG 0X00 													;INICIO DEL PROGRAMA

;CONFIGURACION DEL PIC

	BSF RP0														;CAMBIO AL BANCO 1	
	MOVLW   B'00000000'											;MOVER UN NUMERO BINARIO A W
	MOVWF TRISB												;MOVER DE W A TRISB
	BCF RP0 													;MOVER AL BANCO 0
	MOVLW   B'00000000'											;MOVER UN NUMERO BINARIO A W
	MOVWF PORTB												;MOVER DE W A PORTB
	

;PROGRAMA PRINCIPAL

STR 
	MOVLW B'00000001'
	MOVWF PORTB
	NOP
	MOVLW B'00000010'
	MOVWF PORTB
	NOP
	MOVLW B'00000100'
	MOVWF PORTB
	NOP
	MOVLW B'00001000'
	MOVWF PORTB
	NOP
	MOVLW B'00010000'
	MOVWF PORTB
	NOP
	MOVLW B'00100000'
	MOVWF PORTB
	NOP
	MOVLW B'01000000'
	MOVWF PORTB
	NOP
	MOVLW B'10000000'
	MOVWF PORTB
	NOP
	MOVLW B'01000000'
	MOVWF PORTB
	NOP
	MOVLW B'00100000'
	MOVWF PORTB
	NOP
	MOVLW B'00010000'
	MOVWF PORTB
	NOP
	MOVLW B'00001000'
	MOVWF PORTB
	NOP
	MOVLW B'00000100'
	MOVWF PORTB
	NOP
	MOVLW B'00000010'
	MOVWF PORTB
	NOP
	MOVLW B'00000001'
	MOVWF PORTB
	NOP
	MOVLW B'00000000'
	MOVWF PORTB
	NOP
	MOVLW B'10000001'
	MOVWF PORTB
	NOP
	MOVLW B'01000010'
	MOVWF PORTB
	NOP
	MOVLW B'00100100'
	MOVWF PORTB
	NOP
	MOVLW B'00011000'
	MOVWF PORTB
	NOP
	MOVLW B'00100100'
	MOVWF PORTB
	NOP
	MOVLW B'01000010'
	MOVWF PORTB
	NOP
	MOVLW B'10000001'
	MOVWF PORTB
	NOP
	MOVLW B'00000000'
